<div>
  <div>
    <h1>
      List of all buildings
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new building
    </h2>

    <form action="/insert_building" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address">
      </div>

      <div>
        <label for="classrooms_count_box">
          Classrooms count
        </label>

        <input type="text" id="classrooms_count_box" name="query_classrooms_count">
      </div>

      <button>
        Create building
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Address
        </th>

        <th>
          Classrooms count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_buildings.each do |a_building| %>
      <tr>
        <td>
          <%= a_building.id %>
        </td>

        <td>
          <%= a_building.name %>
        </td>

        <td>
          <%= a_building.address %>
        </td>

        <td>
          <%= a_building.classrooms_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_building.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_building.updated_at) %> ago
        </td>

        <td>
          <a href="/buildings/<%= a_building.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
