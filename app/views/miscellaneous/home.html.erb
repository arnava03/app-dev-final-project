<div class="text-container">
  <form class="input-form" name="myForm" method="post" action = "/submit">
      <div class="form-row-1">
          <p id="typing-text">I want to find an empty room on</p>
          <div class="fade-in">
              <label for="date-input"></label>
              <input type="date" class="form-control" name="date" id="myDate" required>
          </div>
          <p id="typing-text-1"> at</p>
      </div>
      <div class="form-row-2">
          <div class="fade-in-1">
              <label for="time-input"></label>
              <input type="time" class="form-control" name="time" id="myTime" required>
          </div>
          <p id="typing-text-2">and near</p>
          <div class="fade-in-2">
              <label for="place-select"></label>
              <select class="form-control" name="place" id="myPlace" required>
                  <option class="selector" value="">this building</option>
                  <option class="selector" value="Cobb Hall">Cobb Hall</option>
                  <option value="Harper Mem Library">Harper Mem Library</option>
                  <option value="Rosenwald Hall">Rosenwald Hall</option>
                  <option value="Hutchinson Commons">Hutchinson Commons</option>
                  <option value="Regenstein Library">Regenstein Library</option>
                  <option value="Logan Center">Logan Center</option>
                  <option value="Campus North Res Commons">Campus North Res Commons</option>
              </select> 
          </div>
      </div>
      <div class="su">
          <input type="submit" onclick="scrollDown()" class="sub" value="Submit" id="myBtn"> 
      </div>
  </form>
</div>
